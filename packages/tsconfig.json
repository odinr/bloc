{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["esnext", "dom"],
      "declaration": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "strict": true,
      "outDir": "./build",
      "baseUrl": "./src",
      "paths": {
        "@codin/bloc*": ["./*/src"]
      },
      "noEmitHelpers": true,
      "importHelpers": true,
      "esModuleInterop": true,
      
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "typeRoots" : ["./node_modules/@types"]
    },
    "exlude": []
  }